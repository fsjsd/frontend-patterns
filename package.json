{
  "name": "frontend-patterns",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fsjsd/frontend-patterns"
  },
  "homepage": "https://fsjsd.github.io/frontend-patterns",
  "scripts": {
    "start": "react-scripts start",
    "serve": "serve -s build",
    "serve:prod": "NODE_ENV=production yarn serve",
    "serve:lhci": "yarn serve:prod",
    "build": "rimraf build && react-scripts build",
    "predeploy": "rimraf build && react-scripts build && cp build/index.html build/404.html",
    "deploy": "gh-pages -d build",
    "test": "react-scripts test --coverage",
    "testw": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "typescript": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint src --color --fix",
    "prettier": "prettier src -check",
    "lint-staged": "lint-staged",
    "husky-install": "husky install",
    "nuke": "rimraf node_modules && yarn",
    "cypress:open": "cypress open",
    "cypress": "cypress run --headless",
    "lhci": "lhci autorun",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "react-scripts test --bail --watchAll=false --findRelatedTests --passWithNoTests"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "useEffectAsync",
      "useRepeatingEffect",
      "webVitalsUtils",
      "src\\index.tsx",
      "src\\reportWebVitals.ts",
      "src\\components\\carousel\\_source\\index.js",
      ".stories.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 85,
        "branches": 75,
        "functions": 85,
        "lines": 80
      }
    },
    "resetMocks": false
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.0",
    "@testing-library/user-event": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "react-markdown": "^8.0.3",
    "react-router-dom": "^6.3.0",
    "react-router-prop-types": "^1.0.5",
    "react-scripts": "5.0.1",
    "serve": "^14.1.0",
    "source-map-explorer": "^2.5.2",
    "styled-components": "^5.3.5",
    "swr": "^1.3.0",
    "typescript": "^4.7.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.16.7",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-interactions": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-storyshots": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/node-logger": "^6.4.22",
    "@storybook/preset-create-react-app": "^4.1.0",
    "@storybook/react": "^6.4.22",
    "@storybook/testing-library": "^0.0.9",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.24",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "autoprefixer": "^10.4.4",
    "canvas": "^2.9.1",
    "cypress": "^9.5.4",
    "cypress-axe": "^0.14.0",
    "eslint": "^8.13.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-storybook": "^0.5.8",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "jest-axe": "^6.0.0",
    "jest-canvas-mock": "^2.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-styled-components": "^7.0.8",
    "lint-staged": "^12.3.7",
    "mq-polyfill": "^1.1.8",
    "msw": "^0.39.2",
    "msw-storybook-addon": "^1.6.3",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "tsc-files": "^1.1.3",
    "webpack": "^5.72.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}