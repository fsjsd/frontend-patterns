{
  "name": "frontend-patterns",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fsjsd/frontend-patterns"
  },
  "homepage": "https://fsjsd.github.io/frontend-patterns",
  "scripts": {
    "start": "react-scripts start",
    "serve": "serve -s build",
    "serve:prod": "NODE_ENV=production yarn serve",
    "serve:lhci": "yarn serve:prod",
    "build": "rimraf build && react-scripts build",
    "predeploy": "rimraf build && react-scripts build",
    "deploy": "gh-pages -d build",
    "test": "react-scripts test --coverage",
    "testw": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "typescript": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint src --color --fix",
    "prettier": "prettier src -check",
    "lint-staged": "lint-staged",
    "husky-install": "husky install",
    "nuke": "rimraf node_modules && yarn",
    "cypress:open": "cypress open",
    "cypress": "cypress run --headless",
    "lhci": "lhci autorun"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "react-scripts test --bail --watchAll=false --findRelatedTests --passWithNoTests"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "useEffectAsync",
      "useRepeatingEffect",
      "webVitalsUtils",
      "src\\index.tsx",
      "src\\reportWebVitals.ts",
      "src\\components\\carousel\\_source\\index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 85,
        "branches": 75,
        "functions": 85,
        "lines": 80
      }
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-markdown": "^8.0.1",
    "react-router-dom": "^6.2.2",
    "react-router-prop-types": "^1.0.5",
    "react-scripts": "5.0.0",
    "serve": "^13.0.2",
    "source-map-explorer": "^2.5.2",
    "styled-components": "^5.3.5",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/styled-components": "5.1.24",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "autoprefixer": "^10.4.4",
    "canvas": "^2.9.1",
    "cypress": "^9.5.3",
    "cypress-axe": "^0.14.0",
    "eslint": "^8.12.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-react": "^7.29.4",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "jest-axe": "^6.0.0",
    "jest-canvas-mock": "^2.3.1",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "tailwindcss": "^3.0.23",
    "tsc-files": "^1.1.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}